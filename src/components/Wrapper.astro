---
import { twMerge } from "tailwind-merge";

const { id, containerClass, bg, as = "section" } = Astro.props;

const WrapperTag = as;
---

<WrapperTag class="relative not-prose" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div
    class:list={[
      twMerge(
        "relative 2xl:mx-auto max-w-screen-2xl px-6 md:px-20 lg:px-32 text-default",
        containerClass
      ),
    ]}
  >
    <slot />
  </div>
</WrapperTag>
